<mvc:View
	xmlns:mvc="sap.ui.core.mvc"
    controllerName="sap.m.sample.StepInput.StepInput"
	xmlns="sap.m">

    <Table id="idTable"
           items="{
                path: '/modelData'
            }">
        <columns>
            <Column/>
            <Column/>
        </columns>

        <items>
            <ColumnListItem>
                <cells>
                    <Label
                            text="{label}"/>
                    <StepInput
                            value="{value}"
                            displayValuePrecision="{displayValuePrecision}"
                            min="{min}"
                            max="{max}"
                            width="{width}"
                            step="{step}"
                            largerStep="{largerStep}"
                            valueState="{valueState}"
                            enabled="{enabled}"
                            editable="{editable}"
                            change="onChange"/>

                </cells>
            </ColumnListItem>
        </items>
    </Table>

</mvc:View>