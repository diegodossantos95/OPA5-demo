<core:FragmentDefinition xmlns:template="http://schemas.sap.com/sapui5/extension/sap.ui.core.template/1"
						 xmlns="sap.m"
						 xmlns:core="sap.ui.core">

	<Popover
			title="{parts:[{path: 'IsActiveEntity',targetType: 'any'},{path: 'HasDraftEntity',targetType: 'any'},{path: 'DraftAdministrativeData/InProcessByUser',targetType: 'any'}], formatter: 'sap.fe.controls._Table.TableAnnotationHelper.formatDraftLockText' }"
			showHeader="true"
			contentWidth="15.625rem"
			verticalScrolling="false"
			class="sapSmartTemplatesListReportPopover sapUiContentPadding">
		<endButton>
			<Button icon="sap-icon://decline" press="closeDraftAdminPopover"/>
		</endButton>

		<VBox class="sapUiContentPadding">
			<VBox visible="{= !${path:'IsActiveEntity',type : 'sap.ui.model.type.Boolean' } === true &amp;&amp; !${path:'DraftAdministrativeData/LastChangeDateTime',targetType: 'any'}}">
				<Text text="{sap.fe.i18n>SAPFE_LOCKED_OBJECT_POPOVER_NO_DATA_TEXT}"></Text>
			</VBox>

			<VBox visible="{= ${path:'IsActiveEntity',type : 'sap.ui.model.type.Boolean'} === true  &amp;&amp; ${path:'DraftAdministrativeData/InProcessByUser',targetType: 'any'} === ''}">
				<Text text="{parts:[{path:'sap.fe.i18n>SAPFE_LAST_CHANGE_USER_TEXT'},{path:'DraftAdministrativeData/LastChangedByUserDescription'}]}"></Text>
				<VBox visible="{= !!${path:'DraftAdministrativeData/LastChangeDateTime',targetType: 'any'}}" class="sapUiSmallMarginTop"></VBox>
			</VBox>

			<VBox visible="{= ${path:'IsActiveEntity',type : 'sap.ui.model.type.Boolean'} === true  &amp;&amp; !!${path:'DraftAdministrativeData/InProcessByUser',targetType: 'any'}}">
				<Text text="{parts:[{path:'sap.fe.i18n>SAPFE_GENERIC_LOCKED_OBJECT_POPOVER_TEXT'},{path:'DraftAdministrativeData/LastChangedByUserDescription'}]}"></Text>
				<VBox visible="{= !!${path:'DraftAdministrativeData/LastChangeDateTime',targetType: 'any'}}" class="sapUiSmallMarginTop"></VBox>
			</VBox>

			<Text visible="{= !!${path:'DraftAdministrativeData/LastChangeDateTime',targetType: 'any'}}"
				  text="{parts:[{path:'sap.fe.i18n>SAPFE_LAST_CHANGE_TEXT'},{path:'DraftAdministrativeData/LastChangeDateTime'}]}">
			</Text>

		</VBox>

	</Popover>
</core:FragmentDefinition>
