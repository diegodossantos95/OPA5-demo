<core:FragmentDefinition controllerName="sap.ushell.renderers.fiori2.userAccount.UserAccountSetting"
                         height="100%"
                         width="100%"
                         xmlns="sap.uxap"
                         xmlns:m="sap.m"
                         xmlns:core="sap.ui.core">
    <m:VBox class="sapUiSmallMargin">
        <m:FlexBox alignItems="{config>/flexAlignItems}" direction="{config>/textDirection}">
            <m:Label text="{i18n>UserAccountNameFld}:"
                     class="sapUshellUserAccountLabel"
                     width="{config>/labelWidth}"
                     textAlign="{config>/textAlign}"/>
            <m:Input value="{config>/name}"
                     id="userAccountuserName"
                     class="sapUshellUserAccountInput"
                     editable="false"/>

        </m:FlexBox>


        <m:FlexBox alignItems="{config>/flexAlignItems}" direction="{config>/textDirection}">
            <m:Label text="{i18n>UserAccountEmailFld}:"
                     class="sapUshellUserAccountLabel"
                     width="{config>/labelWidth}"
                     textAlign="{config>/textAlign}"/>
            <m:Input value="{config>/mail}"
                     id="userAccountuserMail"
                     class="sapUshellUserAccountInput"
                     editable="false"/>

        </m:FlexBox>

        <m:FlexBox alignItems="{config>/flexAlignItems}" direction="{config>/textDirection}">
            <m:Label text="{i18n>UserAccountServerFld}:"
                     class="sapUshellUserAccountLabel"
                     width="{config>/labelWidth}"
                     textAlign="{config>/textAlign}"/>
            <m:Input value="{config>/server}"
                     id="userAccountuserServer"
                     class="sapUshellUserAccountInput"
                     editable="false"/>

        </m:FlexBox>

    </m:VBox>
</core:FragmentDefinition>